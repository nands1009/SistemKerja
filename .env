#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development
app.baseURL = 'https://sistemkerja-production.up.railway.app'
app.timezone = 'Asia/Jakarta'

#--------------------------------------------------------------------
# DATABASE - Railway Configuration
#--------------------------------------------------------------------
database.default.hostname = gondola.proxy.rlwy.net
database.default.database = railway
database.default.username = root
database.default.password = 12345678
database.default.DBDriver = MySQLi
database.default.port = 12019

# Alternative menggunakan environment variables (pilih salah satu)
# database.default.hostname = ${MYSQLHOST}
# database.default.database = ${MYSQLDATABASE}
# database.default.username = ${MYSQLUSER}
# database.default.password = ${MYSQLPASSWORD}
# database.default.port = ${MYSQLPORT}

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
encryption.key = hex2bin:YOUR_32_CHAR_ENCRYPTION_KEY_HERE

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = WRITEPATH . 'session'

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------
logger.threshold = 1
